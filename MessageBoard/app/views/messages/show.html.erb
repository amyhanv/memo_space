<div class = "message-show container">
	<h3> <%= @message.title %></h3>
	<div class = "msg-post-by">
		<p>Posted by <%= @message.user.email%> <%= time_ago_in_words(@message.created_at)%> ago</p>
	</div>
	<p><%= @message.description %> </p>

	<!--Allows edit option to be seen for owner of post. -->
		<div class = "text-right">
		<% if user_signed_in? %>
			<% if @message.user.id === current_user.id %>
					<%= link_to "Edit", edit_message_path(@message), class: "edits"%>
					<%= link_to "Delete", message_path(@message), method: :delete, data: {confirm: "Are you sure you want to delete this?"}, class: "edits" %>
				
			<% end %>
		<% end %>
		</div>
</div>

<div class = "container">
	<div class = "comment">

		<%= render @message.comments%>
		<%= render 'comments/form' %>



	</div>
</div>