<div class = "message-show container">
	<h2> <%= @message.title %></h2>
	<div class = "msg-post-by">
		<p>Posted by <%= @message.user.email%> <%= time_ago_in_words(@message.created_at)%> ago</p>
	</div>
	<p><%= @message.description %> </p>
</div>


<h3> Comments </h3>
<%= render @message.comments%>
<h3>Reply to Message</h3>
<%= render 'comments/form' %>

<%= link_to "Back", root_path %>
<% if user_signed_in? %>
	<% if @message.user.id === current_user.id%>
		<%= link_to "Edit", edit_message_path(@message) %>
		<%= link_to "Delete", message_path(@message), method: :delete, data: {confirm: "Are you sure you want to delete this?"} %>
	<% end %>
<% end %>
